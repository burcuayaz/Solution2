@model DataEntity.TBL_KATEGORILER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Ajax.BeginForm("kategoriEkle", "Kategori", new AjaxOptions { HttpMethod = "POST", OnSuccess = "SuccesMessage", OnFailure = "ErrorMessage" }))

{
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="formGroupInputLarge1" class="col-sm-2 control-label">Ad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.KATEGORI_ADI, new { @class = "form-control", placeholder = "Lütfen adınızı giriniz..", tabindex = 1 })
                @Html.ValidationMessageFor(m => m.KATEGORI_ADI)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
            </div>
        </div>
    </form>
}

<script type="text/javascript">
    function SuccesMessage(data) {
        console.log(data)
    }
    function ErrorMessage(data) {
        console.log(data)
    }
</script>
